<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@color/colorDarkGray"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="12dp">

        <TextView
            android:id="@+id/txtclose2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/colrowhite"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Opções do App"
            android:textColor="@color/colrowhite"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="41dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Som"
                android:textColor="@color/colrowhite"></TextView>

            <Switch
                android:id="@+id/toggleSound"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/colrowhite"
                android:text="Ativado" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Notificações"
                android:textColor="@color/colrowhite"></TextView>

            <Switch
                android:id="@+id/toggleNotes"
                android:layout_width="97dp"
                android:textColor="@color/colrowhite"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Ativado" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Salvar Pesquisa"
                android:textColor="@color/colrowhite"></TextView>

            <Switch
                android:id="@+id/toggleSaveSearch"
                android:layout_width="97dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colrowhite"
                android:gravity="center"
                android:text="Ativado" />


        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>